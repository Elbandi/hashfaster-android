<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/viewpager_text</item>
    </style>

    <style name="ViewPagerHeaderSmall">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/viewpager_text_light</item>
    </style>

    <style name="ViewPagerText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/viewpager_text</item>
    </style>

    <style name="MainTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/indicator</item>
    </style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrPullText">@string/actionbar_pull2refresh</item>
        <item name="ptrRefreshingText">@string/actionbar_refreshing</item>
        <item name="ptrReleaseText">@string/actionbar_release</item>
    </style>

</resources>